@using Entities.Models;
@model FactoryCollectionModel

@{
    ViewData["Title"] = "Create Factory Collection";
}

<h2 class="text-center pt-3">Create Factory Collection</h2>

<div class="row justify-content-center pt-5">
   <div class="col col-lg-6 col-sm-12 align-items-between">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.FactoryId)
            <label asp-for="Weight" class="form-label"></label>
            <div class="form-floating mb-2">
                <input asp-for="Weight" class="form-control py-0" aria-required="true" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <label asp-for="AmountPaid" class="form-label"></label>
            <div class="form-floating mb-2">
                <input asp-for="AmountPaid" class="form-control py-0" aria-required="true" />
                <span asp-validation-for="AmountPaid" class="text-danger"></span>
            </div>
            <label asp-for="PaidDate" class="form-label"></label>
              <div class="form-floating mb-3">
                <input class="form-control py-0" asp-for="PaidDate" type="date" asp-format="{0:yyyy-MM-dd}"/>
              </div>
            <div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
            </div>
        </form>
          
      
   </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
